{% extends 'base.html.twig' %}
{% block title %}Login | Megs Art {% endblock %}
{% block pagemenu %}
    <div class="page">
        <ul class="page-menu">
            <li><a class="darkgrey" href="/">Home</a></li>
            <span class="grey">Â»</span>
            <li><a class="grey"> {{ app.request.attributes.get('_route') }}</a></li>
        </ul>
    </div>    
{% endblock %}
{% block body %}
    <div id="content-top">
        <div id="content-desc">
            <h1 class="content-title">Login</h1>
            <p class="content-description">If you dont already have an account on the system, please <a href="./register">register</a></p>
        </div>
    </div>
    <div id="content">
        <div id="content-left-side">
            <div class="post">  
                <form class="custom-form" role="form" method="POST" action="{{ path('security_login_check') }}">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData) }}
                        </div>
                    {% endif %}          
                    <input id="email" placeholder="Email" type="email" class="form-control" name="_email" value="{{ last_username }}">    
                    <input id="password" placeholder="Password" type="password" class="form-control" name="_password">
                    <div>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
        </div>
        {% block rightside %}
            {{ render(controller('AppBundle:Arts:_rightSide')) }}
        {% endblock %}
    </div>
{% endblock %}
