<div id="right-side">
    <div class="widget">
        <h3 class="title">Recent Posts</h3>
        <ul>
            {% for posts in arts %} 
                <li>
                    <a href="/details/{{posts.id}}">{{posts.artTitle}}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
    <!-- end .widget -->
    <div class="widget">
        <h3 class="title">Recent Comments</h3>
        <ul id="recentcomments">
            {% for comment in comments %}    
            <li class="recentcomments">
                 <span class="comment-author-link">
                     <a href="/details/{{comment.artId.id}}" rel="external nofollow" class="url">{{comment.artId.artTitle}}: {{comment.artComment}}</a>
                 </span> on <a href="details/{{comment.artId.id}}/comments">{{comment.userId.userNick}}</a>
             </li>
            {% endfor %}
        </ul>
    </div>
    <!-- end .widget -->
