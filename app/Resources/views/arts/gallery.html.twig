{% extends 'base.html.twig' %} {% block title %}Gallery | Megs Art{% endblock %} 
{% block pagemenu %}
    <div class="page">
        <ul class="page-menu">
            <li><a class="darkgrey" href="/">Home</a></li>
            <span class="grey">Â»</span>
            <li><a class="grey"> {{ app.request.attributes.get('_route') }}</a></li>
        </ul>
    </div>    
{% endblock %}
{% block body %}
<div id="content-top">
    <div id="content-desc">
        <h1 class="content-title">{{pageTitle}}</h1>
        <p class="content-description">{{pageDesc}}
        </p>
    </div>
    <!-- end #category-inner -->
</div>
<div id="content">
    <div id="content-left-side">
        {% for art in arts %}
        <div class="post">
            <h2 class="title"><a href="#">{{art.artTitle}}</a></h2>
            <p class="meta-info">Posted by <a>Miglena Stoyanova</a> on {{art.artDate |date("d/m/Y")}} in {{art.artCategory}}
                | <a href="details/{{art.id}}/#comments">Comment</a>
            <div class="post-thumbnail">
                <a href="details/{{art.id}}">
                    <img src="{{asset('uploads/arts/')}}{{art.artImage}}" class="post-thumb" alt="{{art.artTitle}}" width="200"> 
                </a>
            </div>
            <!-- end .post-thumbnail -->
            <p class="indent">{{art.artDescription}}</p>
            <a href="{{router}}/{{art.id}}" class="read-more">Read More</a>
        </div>
            <div class='clearfix'></div>
        <!-- end .post-->
        {% endfor %}
        <div class="pagenation">
         
        </div>
    </div>
    <!-- end #left-area -->

{% block rightside %}
    {{ render(controller('AppBundle:Arts:_rightSide')) }}
{% endblock %}
</div>
{%endblock%}